  "name": "hydrant",
  "description": "Complex event stream aggregator and broadcaster",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/daizoru/node-hydrant.git"
  },
    "directories" : {
      "lib" : "./lib",
      "examples" : "./examples",
      "test" : "./test"
    },
  "main" : "./lib/hydrant",
   "bin": {
     "hydrant": "./bin/hydrant"
   },
  "scripts" : {
    "build" : "coffee --compile --output lib/ src/",
    "watch" : "coffee --watch --compile --output lib/ src/",    
    "pretest" : "coffee --compile --output lib/ src/",    
    "test" : "vows --spec",
    "prestart" : "coffee --compile --output lib/ src/",
    "start" : "./bin/hydrant"
  },
  "engines": {
    "node": "0.6.x || 0.7.x"
  },
  "dependencies": {
     "pkginfo"           : "0.2.x", 
     "libyaml"           : "0.1.x"
  },
  "devDependencies": {
    "mocha": "> 0.12.x",
    "coffee-script" : "1.2.x"
  }
}